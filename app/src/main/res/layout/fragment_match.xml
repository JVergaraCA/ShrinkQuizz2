<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cl.wower.shrinkquizz.MatchFragment">


    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="¿Cual es tu edad?"
    android:padding="8dp"/>
    <SeekBar
        android:id="@+id/userSb"
        android:max="120"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_gravity="right"
        android:padding="16dp"
        android:id="@+id/userTv"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Cual es la edad de tu pareja?"
        android:padding="8dp"/>
    <SeekBar
        android:id="@+id/loverSb"
        android:max="120"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="16dp"
        android:layout_gravity="right"
        android:id="@+id/loverTv"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/matchBtn"
        android:text="Enviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
